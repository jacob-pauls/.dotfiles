""
"" General Sets
""

" Tabbing and Indentation
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap

" Line Numbers
set relativenumber
set nu

" History
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile

" Navigation
set scrolloff=8
set nohlsearch
set incsearch

" Misc.
set exrc
set guicursor=
set noshowmode
set completeopt=menuone,noinsert,noselect
set hidden
set noerrorbells
set signcolumn=yes
set cmdheight=2
