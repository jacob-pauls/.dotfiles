""
"" General Sets
""

" Tabbing and Indentation
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

" Line Numbers
set relativenumber
set nu

" History
set noswapfile
set nobackup
set undofile

" Navigation
set scrolloff=8
set nohlsearch
set incsearch

" Misc.
set exrc
set guicursor=
set noshowmode
set completeopt=menuone,noinsert,noselect
set hidden
set noerrorbells
set nowrap
set signcolumn=yes
